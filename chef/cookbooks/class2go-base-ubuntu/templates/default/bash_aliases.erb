#!/bin/bash
#
# prepend prompt with a prefix
#
# '\e[1;31m'  Red bold
# '\e[1;32m'  Green bold
# '\e[1;33m'  Yellow bold
# '\e[1;34m'  Blue bold
# '\e[1;35m'  Purple bold
# '\e[1;36m'  Cyan bold
#

<% case @node[:main][:instance].upcase 
   when "PROD" %>
PS1="\[\e[1;31m\]PROD "${PS1}
<% when "STAGE" %>
PS1="\[\e[1;33m\]STAGE "${PS1}
<% else %>
PS1="\[\e[1;36m\]<%= @node[:main][:instance].upcase %> "${PS1}
<% end %>

echo "This terminal is using vi key bindings.  To change to emacs style, type \"set -o emacs\"."
set -o vi

