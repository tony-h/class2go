/opt/bitnami/apache2/logs/*_log {
    daily
    missingok
    rotate 100
    compress
    delaycompress
    create 644 root root
    sharedscripts
    postrotate
        kill -USR1 `cat /opt/bitnami/apache2/logs/httpd.pid`
    endscript
    prerotate
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
            run-parts /etc/logrotate.d/httpd-prerotate; \
        fi; \
    endscript
}
